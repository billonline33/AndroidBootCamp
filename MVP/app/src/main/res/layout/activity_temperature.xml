<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="temp"
            type="com.example.bhuang.mvp.Temperature.TemperatureData" />

        <variable
            name="presenter"
            type="com.example.bhuang.mvp.Temperature.TemperaturePresenter" />
    </data>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{temp.location}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{temp.celsius}"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{temp.celsius}"
            />

        <Button
            android:id="@+id/button1"
            android:text="Show data model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{()->presenter.loadData()}"
            />

        <Button
            android:id="@+id/button2"
            android:text="Show data model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{()->presenter.showList()}"
            />
    </LinearLayout>

</layout>